@model TripPlanner.Models.TripViewModel
@{
    ViewData["Title"] = "Add Accomodation";
}
<script>
    // console.log("Hello from accomodationinfo");
    // console.log("Test from Accomodation");
    // console.log("Model.Destination");
    console.log("hi from accomodation info")
    // Use to inject the JSON data safely
    var tripData = @Html.Raw(Json.Serialize(TempData.Peek("Trip")));

    // Now, tripData is a valid JavaScript object, not a string
    console.log(tripData);

    // You can access properties of tripData
