@model TripPlanner.Models.TripViewModel
@{
    ViewData["Title"] = "Add Accomodation";

    //needed to handle when validation errors occur
    if (ViewData["Accomodation"] != null)
    {
        ViewData["SubHeading"] = "Add Info for " + ViewData["Accomodation"];
    }
    else
    {
        ViewData["SubHeading"] = "Add Info for " + TempData["acc"];
    }
    

}



<div class="wrapper form-page">
    
    
    <form asp-action="AccomodationInfo" method="post">
        <div class="form-group">
            <label asp-for="AccomodationPhone">Phone Number</label>
            <input asp-for="AccomodationPhone" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="AccomodationEmail">Email Address</label>
            <input asp-for="AccomodationEmail" type="email" class="form-control" />
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-primary">Next</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>